@model Кредитная_История


@{
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #485e52">
        <div class="collapse navbar-collapse" id="navbar1">
            <ul class="nav nav-pills flex-column flex-sm-row sticky-top justify-content-around">

            </ul>
        </div>
    </nav>


    <br />
    <h1 class="text-center">Ваша кредитная история</h1>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ИД_Кредитной_Истории)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Количество_Счетов)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Закрытые_Счета)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открытые_Счета)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открыт_Последний)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открыт_Первый)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Количество_Заявок)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Последний_Запрос)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Отказы_В_Кредите)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Одобренные_Кредиты)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => Model.ИД_Кредитной_Истории)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => Model.Количество_Счетов)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Закрытые_Счета)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Открытые_Счета)
                </td>
                <td>
                    @Model.Открыт_Последний.Value.ToShortDateString()
                </td>
                <td>
                    @Model.Открыт_Первый.Value.ToShortDateString()

                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Количество_Заявок)
                </td>
                <td>
                    @Model.Последний_Запрос.Value.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Отказы_В_Кредите)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Одобренные_Кредиты)
                </td>
            </tr>
        </tbody>
    </table>
    <a href="../Find" class="btn btn-info">Назад</a>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
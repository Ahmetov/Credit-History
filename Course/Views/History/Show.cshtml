@model IEnumerable<Кредитная_История>

@{
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #485e52; width: 100%;">
        <div class="collapse navbar-collapse" id="navbar1">
            <ul class="nav nav-pills flex-column flex-sm-row sticky-top justify-content-around">
                <li class="nav-item">
                    <a class="nav-link text-sm-center flex-sm p-3 mb-2 text-white nav-bar-text-user" href="/Home/Index">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-sm-center flex-sm p-3 mb-2 text-white nav-bar-text-user" href="/Borrower/Show">Заёмщики</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-sm-center flex-sm p-3 mb-2 text-white nav-bar-text-user" href="/Bank/Show">Банки</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-sm-center flex-sm p-3 mb-2 text-white nav-bar-text-user" href="/Loan/Show">Кредитные договоры</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-sm-center flex-sm p-3 mb-2 text-white nav-bar-text-user" href="/History/Show">Кредитные истории</a>
                </li>
            </ul>
        </div>
    </nav>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ИД_Кредитной_Истории)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Количество_Счетов)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Закрытые_Счета)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открытые_Счета)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открыт_Последний)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Открыт_Первый)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Количество_Заявок)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Последний_Запрос)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Отказы_В_Кредите)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Одобренные_Кредиты)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.ИД_Кредитной_Истории)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Количество_Счетов)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Закрытые_Счета)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Открытые_Счета)
                    </td>
                    <td>
                        @item.Открыт_Последний.Value.ToShortDateString()
                    </td>
                    <td>
                        @item.Открыт_Первый.Value.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Количество_Заявок)
                    </td>
                    <td>
                        @item.Последний_Запрос.Value.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Отказы_В_Кредите)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Одобренные_Кредиты)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="../History/Create" class="btn btn-info">Добавить</a>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>